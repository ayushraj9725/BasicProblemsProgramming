problem : Find average of three numbers

package Basics.BasicConditioanlProblems;

import java.util.Scanner;

public class findTheAvgOfThreeNum {

    static int findAvgThreeNum(int a ,int b, int c){
        int avg = 0;
        avg = (a+b+c) / 3 ;
        return avg ;
    }

    static void findAvgOfThreeNum(int a ,int b , int c){
        int avg = findAvgThreeNum(a,b,c);
        System.out.println("the average of three num is "+avg);
    }

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        System.out.println("Enter first number :");
        int a = input.nextInt();
        System.out.println("Enter second number :");
        int b = input.nextInt();
        System.out.println("Enter  third number :");
        int c= input.nextInt();

//        int avg = findAvgThreeNum(a,b,c);
//        System.out.println("The average of three numbers is "+avg);

        int avg = (a+b+c)/3 ;
        System.out.println("The Average of three num in simpler way "+avg);

        findAvgOfThreeNum(a,b,c);

    }

}

Problem : Area of Rectangular

Solution : 

package Basics.BasicConditioanlProblems;

import java.awt.geom.Area;
import java.util.Scanner;

public class AreaAndPeriOfRectangle {

    public double areaOfRectangle(double width , double height){
        return width * height;
    }

    public double perimeterOfRectangle(double width , double height){
        return 2 * (width + height);
    }

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        System.out.println("Enter the width of the rectangle : ");
        double width = input.nextDouble();

        System.out.println("Enter the height of the rectangle : ");
        double height = input.nextDouble();

        AreaAndPeriOfRectangle areaOfRectangle = new AreaAndPeriOfRectangle();

        double area = areaOfRectangle.areaOfRectangle(width,height);
        System.out.println("The area of the rectangle is "+ area);

        double perimeter = areaOfRectangle.perimeterOfRectangle(width,height);
        System.out.println("The perimeter of the rectangle is "+perimeter);

    }

}
